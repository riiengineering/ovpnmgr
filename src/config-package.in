#ifndef _HAVE_CONFIG_PACKAGE_IN
#define _HAVE_CONFIG_PACKAGE_IN
#include base.in
#ifbool USE_MAIL_CONFIG
#include mail.in
#endif
#ifbool !USE_CONFIG_TBLK
